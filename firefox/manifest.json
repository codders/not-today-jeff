{
  "manifest_version": 2,
  "name": "Not today, Jeff",
  "version": "0.2",
  "description": "Reminds you not to use Jeff Bezos' e-commerce website on days when collective action is planned",
  "icons": {
    "48": "icons/jeff-48.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.uk/*"
      ],
      "js": ["not-today-jeff.js"]
    }
  ]
}
